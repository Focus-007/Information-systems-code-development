<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Log In" Height="618" Width="800"
        Opacity="1">

    <Grid>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="376,62,0,0" VerticalAlignment="Top" Height="53" Width="376" FontSize="32" FontFamily="Arial Nova"/>

        <TextBox x:Name="text1" HorizontalAlignment="Left" Margin="376,216,0,0" TextWrapping="Wrap" BorderBrush="Black"  VerticalAlignment="Top" Width="327" Height="27" BorderThickness="0,0,0,1" FontFamily="Arial Nova" FontSize="20" />

        <TextBox x:Name="text2" HorizontalAlignment="Left" Margin="376,357,0,0"  BorderBrush="Black" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" Height="27"  FontSize="20" Foreground="#FFD89494" BorderThickness="0,0,0,1" FontFamily="Arial Nova"/>
        <Image Margin="48,48,552,350" Source="/Image1.png" Width="200" Height="200" Stretch="Fill"/>

        <Label Content="Почта" HorizontalAlignment="Left" Margin="376,163,0,0" VerticalAlignment="Top" Height="40" Width="78" FontSize="20" FontFamily="Arial Nova"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="376,302,0,0" VerticalAlignment="Top" Height="40" Width="78" FontSize="20" FontFamily="Arial Nova"/>

        <Button Style="{DynamicResource but2}" Content="Войти" HorizontalAlignment="Left" Margin="376,454,0,0" VerticalAlignment="Top" Height="48" Width="326" FontSize="20" Click="Button_Click_2" Background="#FFDE4949" SnapsToDevicePixels="True" BorderThickness="0" FontFamily="Arial Nova Light"/>
        <Button Style="{DynamicResource but1}" Content="Регистрация" HorizontalAlignment="Left" Margin="376,510,0,0" VerticalAlignment="Top" Height="48" Width="327"  FontSize="20" Click="Button_Click_1" Background="#FFDE4949" SnapsToDevicePixels="True" BorderThickness="0" FontFamily="Arial Nova Light"/>

        <Label Content="Восстановить пароль" HorizontalAlignment="Left" Margin="488,399,0,0" VerticalAlignment="Top" Height="33" Width="214" FontSize="20" RenderTransformOrigin="0.474,0.55" FontFamily="Arial Nova"/>
    </Grid>
</Window>