<Window x:Class="Desktop.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Window1" Height="612" Width="800"
        Opacity="1">
    
    <Grid>
        <Image Margin="48,48,560,353" Source="/Image1.png" Stretch="Fill" Width="200" Height="200"/>
        <Label Content="Welcome back" HorizontalAlignment="Left" Margin="376,36,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Arial Nova"/>
        <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="376,95,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial Nova"/>
        <Label Content="Ваша почта" HorizontalAlignment="Left" Margin="376,175,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial Nova"/>
        <TextBox  x:Name="TextBox" HorizontalAlignment="Left" Margin="376,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Height="25" BorderThickness="0,0,0,1" FontFamily="Arial Nova" FontSize="20" />
        <TextBox  x:Name="TextBox1" HorizontalAlignment="Left" Margin="376,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Height="25" BorderThickness="0,0,0,1" FontFamily="Arial Nova" FontSize="20" />
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="376,260,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial Nova"/>
        <TextBox  x:Name="TextBox2" HorizontalAlignment="Left" Margin="376,315,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Height="24" BorderThickness="0,0,0,1" FontFamily="Arial Nova" FontSize="20" />
        <Label Content="Повторите пароль" HorizontalAlignment="Left" Margin="376,345,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Arial Nova"/>
        <TextBox  x:Name="TextBox3" HorizontalAlignment="Left" Margin="376,405,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Height="24" BorderThickness="0,0,0,1" FontFamily="Arial Nova" FontSize="20"/>
        <Button Style="{DynamicResource but2}" Content="Зарегистрироватся" HorizontalAlignment="Left" Margin="376,454,0,0" VerticalAlignment="Top" Height="48" Width="327" Background="#FFDE4949" FontSize="20" Click="Button_Click_1" FontFamily="Arial Nova Light" Padding="0,0,0,0" BorderThickness="0,0,0,0"/>
        <Button Style="{DynamicResource but1}" Content="Назад" HorizontalAlignment="Left" Margin="376,510,0,0" VerticalAlignment="Top" Height="48" Width="327" Background="#FFDE4949" FontSize="20" Click="Button_Click" FontFamily="Arial Nova Light" Padding="0,0,0,0" BorderThickness="0,0,0,0"/>
    </Grid>
</Window>
