<Window x:Class="Desktop.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Page3" Height="600" Width="800"
        Opacity="1">
    <Grid Background="#FFD9D9D9" Margin="0,0,0,0">
        <Label Content="Название" HorizontalAlignment="Left" Margin="35,33,0,0" VerticalAlignment="Top" Height="43" Width="109" FontSize="20" FontFamily="Arial Nova"/>
        <Label Content="Категория" HorizontalAlignment="Left" Margin="35,156,0,0" VerticalAlignment="Top" Height="43" Width="109" FontSize="20" FontFamily="Arial Nova"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="39,267,0,0" VerticalAlignment="Top" Height="43" Width="109" FontSize="20" FontFamily="Arial Nova"/>
        <TextBox Style="{DynamicResource tex1}" x:Name="text" HorizontalAlignment="Left" Height="61" Margin="29,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" BorderThickness="0,0,0,0" FontFamily="Arial Nova" FontSize="20" />
        <TextBox Style="{DynamicResource tex1}" x:Name="text1" HorizontalAlignment="Left" Height="61" Margin="29,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" BorderThickness="0,0,0,0" FontFamily="Arial Nova" FontSize="20" />
        <TextBox Style="{DynamicResource tex1}" x:Name="text2" HorizontalAlignment="Left" Height="104" Margin="29,305,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" BorderThickness="0,0,0,0" FontFamily="Arial Nova" FontSize="20"/>
        <DatePicker x:Name="data" HorizontalAlignment="Left" Margin="459,64,0,0" VerticalAlignment="Top" Height="230" Width="295" FontFamily="Arial Nova"/>
        <Button Style="{DynamicResource but6}" Content="Создать" HorizontalAlignment="Left" Margin="57,463,0,0" VerticalAlignment="Top" Height="48" Width="326" FontSize="20" Background="#FF50AF54" Foreground="White" Click="Button_Click" BorderThickness="0,0,0,0" FontFamily="Arial Nova Light" />
        <Button Style="{DynamicResource but6}" Content="Отмена" HorizontalAlignment="Left" Margin="428,463,0,0" VerticalAlignment="Top" Height="48" Width="326" Background="#FFE04321" FontSize="20" Foreground="#FFFFFEFE" Click="Button_Click_2" BorderBrush="#FFE04321" BorderThickness="0,0,0,0" FontFamily="Arial Nova Light"/>
        
    </Grid>
</Window>
